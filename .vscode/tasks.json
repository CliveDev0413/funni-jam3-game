{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++11",
  				"-fcolor-diagnostics",
  				"-fansi-escape-codes",
  				"-g",
				"${fileDirname}/*.cpp",
  				"-o",
  				"${fileDirname}/${fileBasenameNoExtension}",
  				"`pkg-config --libs --cflags raylib`"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}